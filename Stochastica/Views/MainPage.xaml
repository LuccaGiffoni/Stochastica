<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Stochastica.ViewModels"
             xmlns:views="clr-namespace:Stochastica.Views"
             x:Class="Stochastica.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="1" Padding="10">
                <Entry Placeholder="Preço Inicial" Text="{Binding InitialPrice}" />
                <Entry Placeholder="Volatilidade Média (%)" Text="{Binding Sigma}" />
                <Entry Placeholder="Retorno Médio (%)" Text="{Binding Mean}" />
                <Entry Placeholder="Tempos (em dias)" Text="{Binding NumDays}" />

                <Button Text="Gerar gráfico" Command="{Binding GenerateGraphCommand}"/>
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
